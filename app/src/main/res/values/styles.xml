<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ListTitle" parent="TextAppearance.AppCompat.Title">

    </style>

    <style name="ListSubtitle1" parent="TextAppearance.AppCompat.Body1">

    </style>

    <style name="ListSubtitle2" parent="TextAppearance.AppCompat.Body2">

    </style>
</resources>
